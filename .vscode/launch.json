{
    "configurations": [

        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python Debugger: run baba-lang main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py"
        },
        {
            "name": "Python Debugger: run baba-lang main.py with a problematic file",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "${workspaceFolder}/personal/file.bl"
            ]
        }
    ]
}